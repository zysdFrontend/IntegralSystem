/* pages/trade/trade.wxss */
.container{
  position: relative;
  height: 100%;
}

.header{
  width: 100%;
  height: 200rpx;
  background-color: #facc01;
}

.header .icon_box{
  padding: 20rpx 0 0 5%;
}

.header .icon_box .icon{
  color: #444;
  font-size: 44rpx;
}

.content_wrapper{
  position: absolute;
  top: 150rpx;
  left: 5%;
  width: 90%;
  height: auto;
  margin: 0 auto;
  background-color: rgba(255, 255, 255, .95);
  border-radius: 10rpx;
}

.trade_persons{
  display: flex;
  flex-direction: row;
  margin: 80rpx 0;
}

.trade_persons .person{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 300rpx;
}

.trade_persons .arrow{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.trade_persons .arrow .icon{
  position: relative;
  top: -40rpx;
  font-size: 80rpx;
  color: #666;
}

.userinfo_avatar {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  border-radius: 50%;
}

.userinfo_nickname {
  font-size: 28rpx;
  color: #333;
}

.receciver_name{
  visibility: hidden;
}

.input_form .points_input{
  width: 80%;
  height: 80rpx;
  margin: 0 auto 40rpx;
  padding: 0 10rpx;
  border: 1px solid #999;
  border-radius: 5px;
  text-align: center;
}

.input_form .reason_textarea{
  width: 80%;
  height: 160rpx;
  margin: 0 auto 80rpx;
  padding: 10rpx;
  border: 1px solid #999;
  border-radius: 5px;
}

.tag_box{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 80%;
  margin: 0 auto;
}

.tag_item{
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
  margin-bottom: 20rpx;
  padding: 8rpx 16rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 2px;
  font-size: 28rpx;
}

.tag_item.selected{
  background-color: #666;
  color: #fff;
}

.input_form .useful_points{
  margin-bottom: 30rpx;
  text-align: center;
  font-weight: bold;
  font-size: 40rpx;
}

.input_form .useful_points .points{
  color: #f7aa06;
}

.btn_box{
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 40rpx;
}

.btn_box .confirm{
  width: 70%;
  border: none;
  background-color: #facc01;
  color: #fff;
}